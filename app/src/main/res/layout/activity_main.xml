<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hero"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/main_text"
        android:textColor="#fff"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/main_image"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/coalCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/header"
        android:layout_alignRight="@+id/header"
        android:layout_below="@+id/hero"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="@string/coalCaption"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:typeface="sans" />
</RelativeLayout>
